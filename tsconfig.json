{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "./src"
  },
  "include": ["src/**/*"]
}
